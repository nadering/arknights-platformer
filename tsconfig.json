{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@canvas": ["./src/app/canvas/index.ts"],
      "@character": ["./src/app/_character/index.ts"],
      "@common": ["./src/app/common/index.ts"],
      "@effects": ["./src/app/_effects/index.ts"],
      "@manager": ["./src/app/_manager/index.ts"],
      "@store": ["./src/app/store/index.ts"],
      "@hooks": ["./src/hooks/index.ts"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
